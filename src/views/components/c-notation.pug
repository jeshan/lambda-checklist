.c-notation

  - priority = []
  - totalHigh = []
  - totalMedium = []
  - totalLow = []

  each item, i in locals._items

    each item2 in item

      - priority.push(item2.priority)

  each el, i in priority

    if (el == 'High')
      - totalHigh.push('1')

    else if (el == 'Medium')
      - totalMedium.push('1')

    else
      - totalLow.push('1')

  .c-notation__details
    ul.c-notation__details__list
      li.c-notation__details__item.js-detail-high
        +svg-icon.icon.icon--small.icon-priority--high(data-icon-name='bullet')
        span.js-notation-checked 0
        |/
        span.js-notation-total= totalHigh.length
        | &nbsp;#[=translation.HIGH_CHECKED]
      li.c-notation__details__item.js-detail-medium
        +svg-icon.icon.icon--small.icon-priority--medium(data-icon-name='bullet')
        span.js-notation-checked 0
        |/
        span.js-notation-total= totalMedium.length
        | &nbsp;#[=translation.MEDIUM_CHECKED]
      li.c-notation__details__item.js-detail-low
        +svg-icon.icon.icon--small.icon-priority--low(data-icon-name='bullet')
        span.js-notation-checked 0
        |/
        span.js-notation-total= totalLow.length
        | &nbsp;#[=translation.LOW_CHECKED]

  .c-notation__box
    #js-notation.c-notation__item(data-notation="0")
      span.c-notation__letter X


.c-notation__generate
  button.button.--fill.--large.js-print
    +svg-icon.icon.icon-print(data-icon-name='print')
    | #[=translation.form.BUTTON_GENERATE_PRINT]
